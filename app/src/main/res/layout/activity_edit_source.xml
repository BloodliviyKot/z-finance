    <include layout="@layout/node_edit_actions"></include>

    <RelativeLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_node_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/name"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />


        <TextView
            android:id="@+id/tv_node_icon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_node_name"
            android:layout_below="@id/tv_node_name"
            android:layout_marginTop="40dp"
            android:text="@string/icon"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />


        <TextView
            android:id="@+id/lbl_source_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_node_icon_label"
            android:layout_marginTop="40dp"
            android:text="@string/type"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />


        <EditText
            android:id="@+id/et_node_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@id/tv_node_name"
            android:layout_alignParentRight="true"

            android:maxEms="20"
            android:text="value"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />


        <ImageView
            android:id="@+id/img_node_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@id/tv_node_icon_label"
            android:layout_alignParentRight="true" />


        <Spinner
            android:id="@+id/sp_source_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/lbl_source_type"


            android:layout_alignParentRight="true"
            android:layout_below="@id/img_node_icon"

            android:text="value"
            android:textAppearance="@android:style/Widget.Material.Light.Spinner" />


    </RelativeLayout>


</RelativeLayout>